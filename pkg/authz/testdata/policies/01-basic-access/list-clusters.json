{
  "id": "basic-001",
  "name": "List all ROSA clusters in account",
  "description": "Policy that grants a user the ability to list all ROSA clusters in the AWS account. This is the minimum permission needed to discover what clusters exist.",
  "source": "https://docs.openshift.com/rosa/rosa_architecture/rosa-sts-about-iam-resources.html",
  "policy": {
    "version": "v0",
    "statements": [
      {
        "effect": "Allow",
        "actions": [
          "rosa:ListClusters"
        ],
        "resources": [
          "*"
        ]
      }
    ]
  },
  "testCases": [
    {
      "description": "User can list clusters",
      "request": {
        "action": "rosa:ListClusters",
        "resource": "*"
      },
      "expectedResult": "ALLOW"
    },
    {
      "description": "User cannot describe a specific cluster",
      "request": {
        "action": "rosa:DescribeCluster",
        "resource": "arn:aws:rosa:us-west-2:111122223333:cluster/my-cluster"
      },
      "expectedResult": "DENY"
    },
    {
      "description": "User cannot create clusters",
      "request": {
        "action": "rosa:CreateCluster",
        "resource": "arn:aws:rosa:us-west-2:111122223333:cluster/new-cluster"
      },
      "expectedResult": "DENY"
    }
  ],
  "notes": "ListClusters does not require a specific resource ARN; it always uses '*'"
}
