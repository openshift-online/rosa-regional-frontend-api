{
  "id": "basic-002",
  "name": "Describe a specific ROSA cluster",
  "description": "Policy that grants a user the ability to describe a specific ROSA cluster. Required for kubectl configuration.",
  "source": "https://docs.openshift.com/rosa/rosa_architecture/rosa-sts-about-iam-resources.html",
  "policy": {
    "version": "v0",
    "statements": [
      {
        "effect": "Allow",
        "actions": [
          "rosa:DescribeCluster"
        ],
        "resources": [
          "arn:aws:rosa:us-west-2:111122223333:cluster/my-cluster"
        ]
      }
    ]
  },
  "testCases": [
    {
      "description": "User can describe the specified cluster",
      "request": {
        "action": "rosa:DescribeCluster",
        "resource": "arn:aws:rosa:us-west-2:111122223333:cluster/my-cluster"
      },
      "expectedResult": "ALLOW"
    },
    {
      "description": "User cannot describe a different cluster",
      "request": {
        "action": "rosa:DescribeCluster",
        "resource": "arn:aws:rosa:us-west-2:111122223333:cluster/other-cluster"
      },
      "expectedResult": "DENY"
    },
    {
      "description": "User cannot list clusters",
      "request": {
        "action": "rosa:ListClusters",
        "resource": "*"
      },
      "expectedResult": "DENY"
    }
  ],
  "notes": "DescribeCluster requires a specific cluster ARN. This is commonly combined with ListClusters for discovery."
}
