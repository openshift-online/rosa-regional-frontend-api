{
  "id": "abac-003",
  "name": "Team-based cluster access using principal tags",
  "description": "Policy that allows access to clusters based on matching team tags between the principal and the resource.",
  "source": "https://docs.openshift.com/rosa/rosa_architecture/rosa-sts-about-iam-resources.html",
  "policy": {
    "version": "v0",
    "statements": [
      {
        "sid": "AllowTeamMembersToManageTheirClusters",
        "effect": "Allow",
        "conditions": {
          "StringEquals": {
            "rosa:ResourceTag/Team": "${aws:PrincipalTag/Team}"
          }
        },
        "actions": [
          "rosa:DescribeCluster",
          "rosa:UpdateClusterConfig",
          "rosa:CreateNodePool",
          "rosa:DeleteNodePool",
          "rosa:UpdateNodePoolConfig"
        ],
        "resources": [
          "*"
        ]
      },
      {
        "sid": "AllowListOperations",
        "effect": "Allow",
        "actions": [
          "rosa:ListClusters",
          "rosa:ListNodePools",
          "rosa:ListTagsForResource"
        ],
        "resources": [
          "*"
        ]
      }
    ]
  },
  "testCases": [
    {
      "description": "Platform team member can update platform team cluster",
      "principal": {
        "tags": {
          "Team": "platform"
        }
      },
      "request": {
        "action": "rosa:UpdateClusterConfig",
        "resource": "arn:aws:rosa:us-west-2:111122223333:cluster/platform-services",
        "resourceTags": {
          "Team": "platform"
        }
      },
      "expectedResult": "ALLOW"
    },
    {
      "description": "Platform team member cannot update application team cluster",
      "principal": {
        "tags": {
          "Team": "platform"
        }
      },
      "request": {
        "action": "rosa:UpdateClusterConfig",
        "resource": "arn:aws:rosa:us-west-2:111122223333:cluster/app-services",
        "resourceTags": {
          "Team": "applications"
        }
      },
      "expectedResult": "DENY"
    },
    {
      "description": "Application team member can create node pool on their cluster",
      "principal": {
        "tags": {
          "Team": "applications"
        }
      },
      "request": {
        "action": "rosa:CreateNodePool",
        "resource": "arn:aws:rosa:us-west-2:111122223333:cluster/app-services",
        "resourceTags": {
          "Team": "applications"
        }
      },
      "expectedResult": "ALLOW"
    },
    {
      "description": "Any team member can list all clusters",
      "principal": {
        "tags": {
          "Team": "platform"
        }
      },
      "request": {
        "action": "rosa:ListClusters",
        "resource": "*"
      },
      "expectedResult": "ALLOW"
    }
  ],
  "notes": "Uses principal tags on IAM users/roles matched against resource tags. Scales well with multiple teams without policy changes."
}
